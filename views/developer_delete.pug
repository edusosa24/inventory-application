extends layout

block content
  h2 #{title}: #{developer.name}

  if developer_games.length

    p.delete-next #[strong Delete the following games before attempting to delete this developer.]

    ul.delete-list 
      each game in developer_games
        li
          a(href=game.url) #{game.title}


  else
    p Do you really want to delete this Developer?

    form(action='' method='POST')
      div
        input#developerid(type='hidden' name='developerid' required='true', value=developer._id )

      button.delete-btn(type='submit') Delete