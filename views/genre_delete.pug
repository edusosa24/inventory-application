extends layout

block content
  h2 #{title}: #{genre.name}

  if genre_games.length

    p.delete-next #[strong Delete the following games before attempting to delete this genre.]

    ul.delete-list 
      each game in genre_games
        li
          a(href=game.url) #{game.title}


  else
    p Do you really want to delete this Genre?

    form(action='' method='POST')
      div
        input#genreid(type='hidden' name='genreid' required='true', value=genre._id )

      button.delete-btn(type='submit') Delete