extends layout

block content
  h2= title

  form(action='' method='POST')
    div
      label(for='name') Genre Name
      input#genre_name(type='text' placeholder='Fantasy, Action, etc.' name='name' required=true  value=(undefined===genre ? '' : genre.name))
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg