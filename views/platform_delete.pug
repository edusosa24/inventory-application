extends layout

block content
  h2 #{title}: #{platform.name}

  if platform_games.length

    p.delete-next #[strong Delete the following games before attempting to delete this platform.]

    ul.delete-list 
      each game in platform_games
        li
          a(href=game.url) #{game.title}


  else
    p Do you really want to delete this Platform?

    form(action='' method='POST')
      div
        input#platformid(type='hidden' name='platformid' required='true', value=platform._id )

      button.delete-btn(type='submit') Delete