extends layout

block content
  h2= title

  form(action='' method='POST')
    div
      label(for='name') Platform Name
      input#platform_name(type='text' placeholder='Play Station 1, SEGA Genesis, etc.' name='name' required=true  value=(undefined===platform ? '' : platform.name))
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg