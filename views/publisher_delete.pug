extends layout

block content
  h2 #{title}: #{publisher.name}

  if publisher_games.length

    p.delete-next #[strong Delete the following games before attempting to delete this publisher.]
    ul.delete-list 
      each game in publisher_games
        li
          a(href=game.url) #{game.title}


  else
    p Do you really want to delete this Publisher?

    form(action='' method='POST')
      div
        input#publisherid(type='hidden' name='publisherid' required='true', value=publisher._id )

      button.delete-btn(type='submit') Delete